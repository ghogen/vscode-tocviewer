<Page x:Class="OfflineViewer5.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OfflineViewer5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="tbSearchTerm" Width="400" Text="Search term"></TextBox>
            <Button x:Name="Go" Click="Go_Click">Search</Button>
        </StackPanel>        
        <ListView x:Name="lvResults"  Grid.Row="1" ></ListView>
    </Grid>

</Page>
